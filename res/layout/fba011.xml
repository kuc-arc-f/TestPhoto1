        android:id="@+id/categorybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E4E4E4"
        android:onClick="onClick_menu"
        android:src="@drawable/btn_menu5" >
       </ImageButton>
    </LinearLayout>        
    
